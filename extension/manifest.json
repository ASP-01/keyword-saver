{
    "manifest_version": 3,
    "name": "Keyword Saver",
    "version": "1.0",
    "description": "Save keywords, URLs and tags",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html"
    }
  }
  
  {
    "name": "Keyword Saver",
    "short_name": "Keywords",
    "start_url": "index.html",
    "display": "standalone",
    "background_color": "#121212",
    "theme_color": "#121212",
    "icons": [
      {
        "src": "icon.png",
        "sizes": "192x192",
        "type": "image/png"
      }
    ]
  }
  
